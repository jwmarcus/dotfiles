set autoindent
set expandtab
filetype plugin indent on
set shiftround
set shiftwidth=4
set smarttab
set tabstop=4
set mouse=a
set number
set history=1000
set visualbell
set confirm
set autoread
set clipboard=unnamedplus

nnoremap <Tab> >>_
nnoremap <S-Tab> <<_
inoremap <S-Tab> <C-D>
inoremap <Tab> <Tab>
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv

